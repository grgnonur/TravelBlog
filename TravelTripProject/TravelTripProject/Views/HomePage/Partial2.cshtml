@using TravelTripProject.Models.Siniflar
@model List<Blog>


<div class="padding">
    <h4>Blog'un en popüler listesi</h4>
    <ul class="list list-pad">
        @{int i = 1; }
        @foreach (var item in Model)
        {
            <li class="list-bg"><span>@i.</span><a href="/Blog/BlogDetay/@item.ID">@item.Baslik</a></li>
            i++;
        }
    </ul>
    <a href="#" class="link1">Tüm Blogları Gör</a>
</div>
